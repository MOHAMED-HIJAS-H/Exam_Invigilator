@model Exam_Invigilator.Domain.Models.Invigilator
@{
    ViewData["Title"] = "Invigilator Registration";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Register</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background: linear-gradient(to right, #cfd9df, #e2ebf0);
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .register-box {
            background: white;
            padding: 40px;
            border-radius: 15px;
            box-shadow: 0 0 20px rgba(0,0,0,0.2);
            width: 100%;
            max-width: 500px;
        }

            .register-box h2 {
                margin-bottom: 30px;
                text-align: center;
            }

        .form-control:focus {
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
            border-color: #80bdff;
        }

        .btn-success {
            width: 100%;
        }
    </style>
</head>
<body>
    <div class="register-box">
        <h2> Register as Invigilator</h2>
        <form method="post" asp-action="Register">
            <div class="mb-3">
                <label class="form-label">Name</label>
                <input asp-for="Name" class="form-control" required />
            </div>
            <div class="mb-3">
                <label class="form-label">Contact</label>
                <input asp-for="Contact" class="form-control" required />
            </div>

            <label class="form-label">Select Your Availability:</label>
            <div class="mb-3">
                @foreach (var day in Enum.GetValues(typeof(DayOfWeek)))
                {
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="availabilities" value="@day" id="@day" />
                        <label class="form-check-label" for="@day">@day</label>
                    </div>
                }
            </div>

            <button type="submit" class="btn btn-success">Submit</button>
        </form>
        <a href="/Invigilator/Login" class="btn btn-outline-secondary mt-3 w-100">Back to Login</a>
    </div>
</body>
</html>
