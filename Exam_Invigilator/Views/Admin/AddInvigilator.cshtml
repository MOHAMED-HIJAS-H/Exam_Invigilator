@model Exam_Invigilator.Domain.Models.Invigilator
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Add Invigilator</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background: linear-gradient(to right, #cfd9df, #e2ebf0);
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .form-container {
            background-color: #ffffff;
            padding: 40px 30px;
            border-radius: 15px;
            box-shadow: 0 0 20px rgba(0,0,0,0.1);
            width: 100%;
            max-width: 500px;
            animation: fadeIn 0.6s ease-in-out;
        }

        h2 {
            text-align: center;
            color: #343a40;
            margin-bottom: 30px;
        }

        .form-check-label {
            margin-left: 5px;
        }

        .btn-outline-secondary {
            border-color: #6c757d;
            color: #6c757d;
        }

            .btn-outline-secondary:hover {
                background-color: #6c757d;
                color: white;
            }

        .btn-success {
            background-color: #5cb85c;
            border-color: #5cb85c;
            width: 100%;
        }

        .back-btn {
            display: block;
            margin-top: 20px;
            width: 100%;
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="form-container">
        <h2>Add Invigilator</h2>
        <form asp-action="AddInvigilator" method="post">
            <div class="mb-3">
                <input asp-for="Name" class="form-control" placeholder="Enter name" required />
            </div>
            <div class="mb-3">
                <input asp-for="Contact" class="form-control" placeholder="Enter contact" required />
            </div>
            <div class="mb-3">
                <label class="form-label">Availability:</label>
                @foreach (var day in Enum.GetValues(typeof(DayOfWeek)))
                {
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" name="SelectedDays" value="@day" />
                        <label class="form-check-label">@day</label>
                    </div>
                }
            </div>
            <button type="submit" class="btn btn-success">✅ Submit</button>
        </form>
        <a class="btn btn-outline-secondary back-btn" asp-action="Index">Back to Dashboard</a>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
