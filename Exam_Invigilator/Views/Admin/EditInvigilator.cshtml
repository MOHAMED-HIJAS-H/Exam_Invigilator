@model Exam_Invigilator.Domain.Models.Invigilator
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Edit Invigilator</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="p-4">
    <div class="container">
        <h2 class="mb-4">✏️ Edit Invigilator</h2>
        <form asp-action="EditInvigilator" method="post" class="bg-light p-4 rounded shadow-sm">
            <input type="hidden" asp-for="Id" />
            <div class="mb-3">
                <label>Name</label>
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="mb-3">
                <label>Contact</label>
                <input asp-for="Contact" class="form-control" />
            </div>
            <div class="mb-3">
                <label>Availability</label><br />
                @foreach (var day in Enum.GetValues(typeof(DayOfWeek)))
                {
                    var isChecked = Model.Availabilities?.Any(a => a.Day == (DayOfWeek)day) ?? false;
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" name="SelectedDays" value="@day" @(isChecked ? "checked" : "") />
                        <label class="form-check-label">@day</label>
                    </div>
                }
            </div>
            <button type="submit" class="btn btn-primary">💾 Save</button>
            <a asp-action="Index" class="btn btn-secondary">🔙 Cancel</a>
        </form>
    </div>
</body>
</html>
