@model Exam_Invigilator.Domain.Models.Invigilator
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Add Invigilator</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="p-4">
    <div class="container">
        <h2 class="mb-4">Add Invigilator</h2>
        <form asp-action="AddInvigilator" method="post" class="bg-light p-4 rounded shadow-sm">
            <div class="mb-3">
                <input asp-for="Name" class="form-control" placeholder="Name" />
            </div>
            <div class="mb-3">
                <input asp-for="Contact" class="form-control" placeholder="Contact" />
            </div>
            <label class="form-label">Availability:</label><br />
            <div class="mb-3">
                @foreach (var day in Enum.GetValues(typeof(DayOfWeek)))
                {
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" name="SelectedDays" value="@day" />
                        <label class="form-check-label">@day</label>
                    </div>
                }
            </div>
            <button type="submit" class="btn btn-success">✅ Submit</button>
        </form>
        <a class="btn btn-secondary mt-3" asp-action="Index">Back to Dashboard</a>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
