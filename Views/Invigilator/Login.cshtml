@{
    ViewData["Title"] = "Invigilator Login";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Invigilator Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background: linear-gradient(to right, #74ebd5, #ACB6E5);
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            font-family: 'Segoe UI', sans-serif;
        }

        .login-box {
            background: #ffffff;
            padding: 40px 30px;
            border-radius: 16px;
            box-shadow: 0 0 25px rgba(0, 0, 0, 0.15);
            width: 100%;
            max-width: 400px;
        }

            .login-box h2 {
                margin-bottom: 30px;
                text-align: center;
                color: #333;
            }

        .form-label {
            font-weight: 600;
        }

        .form-control:focus {
            box-shadow: 0 0 8px rgba(0, 123, 255, 0.4);
            border-color: #007bff;
        }

        .btn-primary {
            width: 100%;
            font-weight: 600;
            padding: 10px;
        }

        .btn-outline-dark {
            width: 100%;
            margin-top: 10px;
            font-weight: 500;
        }

        .error-msg {
            color: #d9534f;
            font-size: 0.95rem;
            text-align: center;
            margin-top: 12px;
        }
    </style>
</head>
<body>
    <div class="login-box">
        <h2>👤 Invigilator Login</h2>
        <form method="post" asp-action="Login">
            <div class="mb-3">
                <label class="form-label">Name</label>
                <input name="email" type="text" class="form-control" placeholder="Enter your Name" required />
            </div>
            <div class="mb-3">
                <label class="form-label">Contact (Verification)</label>
                <input name="contact" class="form-control" placeholder="Enter your contact" required />
            </div>
            <button type="submit" class="btn btn-primary">Login</button>

            @if (!string.IsNullOrEmpty(ViewBag.Error))
            {
                <div class="error-msg">@ViewBag.Error</div>
            }
        </form>

        <a href="/Admin/Login" class="btn btn-outline-dark">👤Admin Login</a>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
